        <div class='row'>
          <div class='span five'>
            <table class='table table-striped'>
        <thead>
          <tr>
            <th>Day</th>
            <th>E. Coli Count</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Monday</td>
            <td><%= @lastweek[0].count %></td>
          </tr>
          <tr>
            <td>Tuesday</td>
            <td><%= @lastweek[1].count %></td>
          </tr>
          <tr>
            <td>Wednesday</td>
            <td><%= @lastweek[2].count %></td>
          </tr>
          <tr>
            <td>Thursday</td>
            <td><%= @lastweek[3].count %></td>
          </tr>
          <tr>
            <td>Friday</td>
            <td><%= @lastweek[4].count %></td>
          </tr>
          <tr>
            <td>Saturday</td>
            <td><%= @lastweek[5].count %></td>
          </tr>
           <tr>
            <td>Sunday</td>
            <td><%= @lastweek[6].count %></td>
          </tr>
        </tbody>
      </table>
      </div>
      <div class='span five'>
      <table class='table'>
        <tbody>
          <tr>
            <td><h5>Today's E. Coli Count</h5></td>
            <td><%= @beach.today_ecoli %></td>
          </tr>
          <tr>
            <td><h5>Three Day Average</h5></td>
            <td><%= avg_3_or(@beach)[0][:ecoli] %></td>
          </tr>
          <tr>
            <td><h5>E. Coli-Free Win Streak</h5></td>
            <td><%= ecoli_streak(@beach) %> days</td>
          </tr>
          <tr>
            <td><h5>Current Temperature</h5></td>
            <td><%= @weather[:current_temp] %>° F</td>
          </tr>
          <tr>
            <td><h5>Chance of Precipitation</h5></td>
            <td><%= @weather[:chance_precip] %>%</td>
          </tr>
          <tr>
            <td><h5>Wind Speed</h5></td>
            <td><%= @weather[:wind_speed] %> MPH</td>
          </tr>
          <tr>
            <td><h5>Current Summary</h5></td>
            <td><%= @weather[:current_summary] %></td>
          </tr>
          <tr>
            <td><h5>Daily Summary</h5></td>
            <td><%= @weather[:daily_summary] %></td>
          </tr>
          <tr>
            <td><h5>High/Low Temperature</h5></td>
            <td><%= @weather[:max] %>° F / <%= @weather[:min] %>° F</td>
          </tr>
        </tbody>
      </table>
      </div>
